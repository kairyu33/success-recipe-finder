  "usageGuidelines": {
    "primary": {
      "use": ["Main CTAs", "Brand elements", "Active states", "Primary icons"],
      "avoid": ["Body text (use 700+ for text)", "Over-saturation (use sparingly)"]
    },
    "accent": {
      "use": ["Secondary CTAs", "Highlights", "New badges", "Attention elements"],
      "avoid": ["Primary navigation", "Body text", "Overuse (dilutes impact)"]
    },
    "neutral": {
      "use": ["Text hierarchy", "Borders", "Backgrounds", "Dividers"],
      "avoid": ["Primary buttons", "Hero sections"]
    },
    "success": {
      "use": ["Success messages", "Completed states", "Positive feedback"],
      "avoid": ["Error states", "Primary CTAs"]
    },
    "warning": {
      "use": ["Warnings", "Cautions", "Important notices"],
      "avoid": ["Success states", "Primary buttons"]
    },
    "danger": {
      "use": ["Errors", "Destructive actions", "Critical alerts"],
      "avoid": ["Success states", "Primary CTAs"]
    }
  },

