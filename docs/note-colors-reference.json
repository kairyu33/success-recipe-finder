  "componentExamples": {
    "buttons": {
      "primary": {
        "classes": "bg-gradient-to-r from-primary-400 to-primary-500 hover:from-primary-500 hover:to-primary-600 text-white shadow-primary hover:shadow-primary-lg transition-all duration-200",
        "utility": "btn-note-primary"
      },
      "secondary": {
        "classes": "bg-transparent text-primary-500 border-2 border-primary-400 hover:bg-primary-50 hover:border-primary-500 transition-all duration-200",
