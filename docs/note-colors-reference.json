        "classes": "bg-neutral-50 dark:bg-dark-bg-tertiary border border-neutral-200 dark:border-dark-border focus:border-primary-400 focus:ring-2 focus:ring-primary-400/20 text-neutral-900 dark:text-dark-text-primary rounded-lg px-4 py-2 transition-all",
        "utility": "focus-note"
