# Database URL
DATABASE_URL="file:./dev.db"

# Anthropic API Key
# Get your API key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_api_key_here

# Authentication Settings
# JWT secret for session tokens (minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_at_least_32_characters_long

# Membership password for general user access
MEMBERSHIP_PASSWORD=your_membership_password

# Admin password for admin panel access (minimum 12 characters recommended)
ADMIN_PASSWORD=your_strong_admin_password_here

# Cost Control Settings
# Maximum tokens to request per API call (default: 3072)
MAX_TOKENS_PER_REQUEST=3072

# Maximum article length in characters (default: 10000)
MAX_ARTICLE_LENGTH=10000

# Rate Limiting
# Maximum number of requests per time window (default: 10)
API_RATE_LIMIT_MAX_REQUESTS=10

# Rate limit time window in milliseconds (default: 60000 = 1 minute)
API_RATE_LIMIT_WINDOW_MS=60000

# Caching Configuration
# Enable caching to reduce duplicate API calls (default: false for development)
ENABLE_CACHING=false

# Cache time-to-live in milliseconds (default: 1800000 = 30 minutes)
CACHE_TTL_MS=1800000

# Maximum number of cached entries (default: 1000)
CACHE_MAX_SIZE=1000

# Request Deduplication
# Enable deduplication to prevent identical requests (default: true)
ENABLE_REQUEST_DEDUPLICATION=true

# Deduplication time window in milliseconds (default: 30000 = 30 seconds)
DEDUPLICATION_WINDOW_MS=30000

# Usage Analytics
# Enable usage tracking and analytics (default: true)
ENABLE_USAGE_ANALYTICS=true

# Log detailed usage information to console (default: false)
LOG_DETAILED_USAGE=false

# Redis Configuration (Optional - for production caching)
# REDIS_URL=redis://localhost:6379
