"use client";

import { useState } from "react";

/**
 * Full article analysis response structure
 *
 * @description Contains all analysis results including titles, insights, hashtags, and image suggestions
 */
interface AnalysisResponse {
  suggestedTitles?: string[];
  insights?: {
    whatYouLearn?: string[];
    benefits?: string[];
    recommendedFor?: string[];
    oneLiner?: string;
  };
  eyeCatchImage?: {
    mainPrompt?: string;
    compositionIdeas?: string[];
    colorPalette?: string[];
    mood?: string;
    style?: string;
    summary?: string;
  };
  hashtags?: string[];
  error?: string;
}

/**
 * Loading state for different sections
 */
interface LoadingStates {
  titles: boolean;
  insights: boolean;
  image: boolean;
  hashtags: boolean;
}

export default function Home() {
  const [articleText, setArticleText] = useState("");
  const [analysisData, setAnalysisData] = useState<AnalysisResponse | null>(null);
  const [loading, setLoading] = useState(false);
  const [loadingStates, setLoadingStates] = useState<LoadingStates>({
    titles: false,
    insights: false,
    image: false,
    hashtags: false,
  });
  const [error, setError] = useState("");
  const [copiedItem, setCopiedItem] = useState<string | null>(null);
  const [activeTab, setActiveTab] = useState<"titles" | "insights" | "image" | "hashtags">("titles");

  /**
   * Handles the full article analysis
   */
  const handleAnalyze = async () => {
    if (!articleText.trim()) {
      setError("記事のテキストを入力してください");
      return;
    }

    setLoading(true);
    setError("");
    setAnalysisData(null);
    setLoadingStates({
      titles: true,
      insights: true,
      image: true,
      hashtags: true,
    });

    try {
      const response = await fetch("/api/analyze-article-full", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ articleText }),
      });

      const data: AnalysisResponse = await response.json();

      if (!response.ok) {
        throw new Error(data.error || "分析に失敗しました");
      }

      setAnalysisData(data);
    } catch (err) {
      setError(err instanceof Error ? err.message : "エラーが発生しました");
    } finally {
      setLoading(false);
      setLoadingStates({
        titles: false,
        insights: false,
        image: false,
        hashtags: false,
      });
    }
  };

  /**
   * Copy text to clipboard with visual feedback
   */
  const copyToClipboard = async (text: string, itemId: string) => {
    try {
      await navigator.clipboard.writeText(text);
      setCopiedItem(itemId);
      setTimeout(() => setCopiedItem(null), 2000);
    } catch (err) {
      console.error("Failed to copy:", err);
    }
  };

  /**
   * Copy all hashtags with space separation
   */
  const copyAllHashtags = async () => {
    if (!analysisData?.hashtags) return;
    try {
      const allHashtags = analysisData.hashtags.join(" ");
      await navigator.clipboard.writeText(allHashtags);
      setCopiedItem("all-hashtags");
      setTimeout(() => setCopiedItem(null), 2000);
    } catch (err) {
      console.error("Failed to copy:", err);
    }
  };

  return (
    <main className="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 dark:from-gray-900 dark:via-gray-800 dark:to-indigo-900 py-12 px-4 sm:px-6 lg:px-8">
      <div className="max-w-7xl mx-auto">
        {/* Header */}
        <div className="text-center mb-12">
          <h1 className="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4 bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600 dark:from-blue-400 dark:to-indigo-400">
            note.com 記事分析 AI
          </h1>
          <p className="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
            Claude AIがあなたの記事を総合分析。タイトル候補、記事の要約、アイキャッチ画像のアイデア、最適なハッシュタグを自動生成します
          </p>
        </div>

        {/* Input Card */}
        <div className="bg-white dark:bg-gray-800 rounded-2xl shadow-xl p-6 md:p-8 mb-8 border border-gray-200 dark:border-gray-700">
          <div className="mb-6">
            <label
              htmlFor="article-text"
              className="block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-3"
            >
              記事の内容を入力してください
            </label>
            <textarea
              id="article-text"
              value={articleText}
              onChange={(e) => setArticleText(e.target.value)}
              placeholder="記事のテキストをここに貼り付けてください...&#10;&#10;例：&#10;今日は東京で開催されたテクノロジーカンファレンスに参加しました。最新のAI技術について学び、多くの開発者と交流できました。特にClaude APIを使った自然言語処理のデモが印象的でした。"
              className="w-full h-64 px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white resize-none transition-all"
              disabled={loading}
            />
            <div className="mt-2 flex items-center justify-between">
              <p className="text-sm text-gray-500 dark:text-gray-400">
                {articleText.length} 文字
              </p>
              <p className="text-xs text-gray-400 dark:text-gray-500">
                最大10,000文字
              </p>
            </div>
          </div>

          {/* Error Message */}
          {error && (
            <div className="mb-6 p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg animate-fade-in">
              <div className="flex items-start">
                <svg className="h-5 w-5 text-red-600 dark:text-red-400 mt-0.5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <p className="text-red-700 dark:text-red-400 text-sm font-medium">
                  {error}
                </p>
              </div>
            </div>
          )}

          {/* Analyze Button */}
          <button
            onClick={handleAnalyze}
            disabled={loading || !articleText.trim()}
            className="w-full bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-bold py-4 px-6 rounded-lg transition-all transform hover:scale-105 disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none flex items-center justify-center shadow-lg hover:shadow-xl"
          >
            {loading ? (
              <>
                <svg
                  className="animate-spin h-5 w-5 mr-3"
                  viewBox="0 0 24 24"
                >
                  <circle
                    className="opacity-25"
                    cx="12"
                    cy="12"
                    r="10"
                    stroke="currentColor"
                    strokeWidth="4"
                    fill="none"
                  />
                  <path
                    className="opacity-75"
                    fill="currentColor"
                    d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                  />
                </svg>
                記事を分析中...
              </>
            ) : (
              <>
                <svg
                  className="h-5 w-5 mr-2"
                  fill="none"
                  strokeLinecap="round"
                  strokeLinejoin="round"
                  strokeWidth="2"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
                記事を分析する
              </>
            )}
          </button>
        </div>

        {/* Results Section */}
        {analysisData && (
          <div className="bg-white dark:bg-gray-800 rounded-2xl shadow-xl border border-gray-200 dark:border-gray-700 overflow-hidden">
            {/* Tabs Navigation */}
            <div className="border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-900/50">
              <nav className="flex -mb-px overflow-x-auto">
                <button
                  onClick={() => setActiveTab("titles")}
                  className={`px-6 py-4 text-sm font-semibold border-b-2 transition-colors whitespace-nowrap ${
                    activeTab === "titles"
                      ? "border-blue-600 text-blue-600 dark:border-blue-400 dark:text-blue-400"
                      : "border-transparent text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300"
                  }`}
                >
                  <div className="flex items-center gap-2">
                    <svg className="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                    </svg>
                    タイトル候補
                  </div>
                </button>
                <button
                  onClick={() => setActiveTab("insights")}
                  className={`px-6 py-4 text-sm font-semibold border-b-2 transition-colors whitespace-nowrap ${
                    activeTab === "insights"
                      ? "border-blue-600 text-blue-600 dark:border-blue-400 dark:text-blue-400"
                      : "border-transparent text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300"
                  }`}
                >
                  <div className="flex items-center gap-2">
                    <svg className="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    記事の要約
                  </div>
                </button>
                <button
                  onClick={() => setActiveTab("image")}
                  className={`px-6 py-4 text-sm font-semibold border-b-2 transition-colors whitespace-nowrap ${
                    activeTab === "image"
                      ? "border-blue-600 text-blue-600 dark:border-blue-400 dark:text-blue-400"
                      : "border-transparent text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300"
                  }`}
                >
                  <div className="flex items-center gap-2">
                    <svg className="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    アイキャッチ
                  </div>
                </button>
                <button
                  onClick={() => setActiveTab("hashtags")}
                  className={`px-6 py-4 text-sm font-semibold border-b-2 transition-colors whitespace-nowrap ${
                    activeTab === "hashtags"
                      ? "border-blue-600 text-blue-600 dark:border-blue-400 dark:text-blue-400"
                      : "border-transparent text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300"
                  }`}
                >
                  <div className="flex items-center gap-2">
                    <svg className="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14" />
                    </svg>
                    ハッシュタグ
                  </div>
                </button>
              </nav>
            </div>

            {/* Tab Content */}
            <div className="p-6 md:p-8">
              {/* Suggested Titles Tab */}
              {activeTab === "titles" && (
                <div className="space-y-4 animate-fade-in">
                  <h2 className="text-2xl font-bold text-gray-900 dark:text-white mb-6">
                    タイトル候補
                  </h2>
                  {analysisData.suggestedTitles && analysisData.suggestedTitles.length > 0 ? (
                    <div className="space-y-3">
                      {analysisData.suggestedTitles.map((title, index) => (
                        <div
                          key={index}
                          className="group relative bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-gray-700 dark:to-indigo-900/30 rounded-lg p-4 border border-blue-100 dark:border-gray-600 hover:shadow-md transition-all"
                        >
                          <div className="flex items-start justify-between gap-4">
                            <div className="flex-1">
                              <div className="flex items-center gap-2 mb-2">
                                <span className="inline-flex items-center justify-center w-6 h-6 rounded-full bg-blue-600 dark:bg-blue-500 text-white text-xs font-bold">
                                  {index + 1}
                                </span>
                                <span className="text-xs font-semibold text-blue-600 dark:text-blue-400">
                                  タイトル案
                                </span>
                              </div>
                              <p className="text-gray-800 dark:text-gray-200 font-medium leading-relaxed">
                                {title}
                              </p>
                            </div>
                            <button
                              onClick={() => copyToClipboard(title, `title-${index}`)}
                              className="flex-shrink-0 p-2 rounded-lg hover:bg-white/50 dark:hover:bg-gray-600 transition-colors"
                              title="コピー"
                            >
                              {copiedItem === `title-${index}` ? (
                                <svg className="h-5 w-5 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M5 13l4 4L19 7" />
                                </svg>
                              ) : (
                                <svg className="h-5 w-5 text-gray-400 group-hover:text-blue-600 dark:group-hover:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                                </svg>
                              )}
                            </button>
                          </div>
                        </div>
                      ))}
                    </div>
                  ) : (
                    <div className="text-center py-8 text-gray-500 dark:text-gray-400">
                      <p>タイトル候補が生成されませんでした</p>
                    </div>
                  )}
                </div>
              )}

              {/* Article Insights Tab */}
              {activeTab === "insights" && (
                <div className="space-y-8 animate-fade-in">
                  <h2 className="text-2xl font-bold text-gray-900 dark:text-white mb-6">
                    記事の要約
                  </h2>

                  {/* One-liner Summary */}
                  {analysisData.insights?.oneLiner && (
                    <div className="bg-gradient-to-r from-purple-50 to-pink-50 dark:from-purple-900/20 dark:to-pink-900/20 rounded-xl p-6 border border-purple-200 dark:border-purple-800">
                      <div className="flex items-start gap-4">
                        <div className="flex-shrink-0">
                          <div className="w-10 h-10 rounded-full bg-purple-600 dark:bg-purple-500 flex items-center justify-center">
                            <svg className="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M13 10V3L4 14h7v7l9-11h-7z" />
                            </svg>
                          </div>
                        </div>
                        <div className="flex-1">
                          <h3 className="text-sm font-semibold text-purple-700 dark:text-purple-300 mb-2">
                            この記事を一言で
                          </h3>
                          <p className="text-lg text-gray-800 dark:text-gray-200 font-medium italic">
                            "{analysisData.insights.oneLiner}"
                          </p>
                        </div>
                      </div>
                    </div>
                  )}

                  <div className="grid md:grid-cols-3 gap-6">
                    {/* What You'll Learn */}
                    {analysisData.insights?.whatYouLearn && analysisData.insights.whatYouLearn.length > 0 && (
                      <div className="bg-green-50 dark:bg-green-900/20 rounded-xl p-6 border border-green-200 dark:border-green-800">
                        <div className="flex items-center gap-3 mb-4">
                          <div className="w-8 h-8 rounded-lg bg-green-600 dark:bg-green-500 flex items-center justify-center">
                            <svg className="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                            </svg>
                          </div>
                          <h3 className="text-lg font-bold text-green-700 dark:text-green-300">
                            学べること
                          </h3>
                        </div>
                        <ul className="space-y-2">
                          {analysisData.insights.whatYouLearn.map((item, index) => (
                            <li key={index} className="flex items-start gap-2 text-sm text-gray-700 dark:text-gray-300">
                              <svg className="h-5 w-5 text-green-600 dark:text-green-400 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                              </svg>
                              <span>{item}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    )}

                    {/* Benefits */}
                    {analysisData.insights?.benefits && analysisData.insights.benefits.length > 0 && (
                      <div className="bg-blue-50 dark:bg-blue-900/20 rounded-xl p-6 border border-blue-200 dark:border-blue-800">
                        <div className="flex items-center gap-3 mb-4">
                          <div className="w-8 h-8 rounded-lg bg-blue-600 dark:bg-blue-500 flex items-center justify-center">
                            <svg className="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
                            </svg>
                          </div>
                          <h3 className="text-lg font-bold text-blue-700 dark:text-blue-300">
                            読むメリット
                          </h3>
                        </div>
                        <ul className="space-y-2">
                          {analysisData.insights.benefits.map((item, index) => (
                            <li key={index} className="flex items-start gap-2 text-sm text-gray-700 dark:text-gray-300">
                              <svg className="h-5 w-5 text-blue-600 dark:text-blue-400 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M5 13l4 4L19 7" />
                              </svg>
                              <span>{item}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    )}

                    {/* Recommended For */}
                    {analysisData.insights?.recommendedFor && analysisData.insights.recommendedFor.length > 0 && (
                      <div className="bg-orange-50 dark:bg-orange-900/20 rounded-xl p-6 border border-orange-200 dark:border-orange-800">
                        <div className="flex items-center gap-3 mb-4">
                          <div className="w-8 h-8 rounded-lg bg-orange-600 dark:bg-orange-500 flex items-center justify-center">
                            <svg className="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                            </svg>
                          </div>
                          <h3 className="text-lg font-bold text-orange-700 dark:text-orange-300">
                            おすすめの読者
                          </h3>
                        </div>
                        <ul className="space-y-2">
                          {analysisData.insights.recommendedFor.map((item, index) => (
                            <li key={index} className="flex items-start gap-2 text-sm text-gray-700 dark:text-gray-300">
                              <svg className="h-5 w-5 text-orange-600 dark:text-orange-400 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                              </svg>
                              <span>{item}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    )}
                  </div>
                </div>
              )}

              {/* Eye-Catch Image Tab */}
              {activeTab === "image" && (
                <div className="space-y-6 animate-fade-in">
                  <h2 className="text-2xl font-bold text-gray-900 dark:text-white mb-6">
                    アイキャッチ画像のアイデア
                  </h2>

                  {analysisData.eyeCatchImage ? (
                    <div className="space-y-6">
                      {/* Summary */}
                      {analysisData.eyeCatchImage.summary && (
                        <div className="bg-gradient-to-r from-indigo-50 to-purple-50 dark:from-indigo-900/20 dark:to-purple-900/20 rounded-xl p-6 border border-indigo-200 dark:border-indigo-800">
                          <h3 className="text-sm font-semibold text-indigo-700 dark:text-indigo-300 mb-3">
                            画像の概要（100文字）
                          </h3>
                          <p className="text-gray-800 dark:text-gray-200 leading-relaxed">
                            {analysisData.eyeCatchImage.summary}
                          </p>
                        </div>
                      )}

                      {/* Main Prompt */}
                      {analysisData.eyeCatchImage.mainPrompt && (
                        <div className="bg-white dark:bg-gray-700 rounded-xl p-6 border border-gray-200 dark:border-gray-600">
                          <div className="flex items-center justify-between mb-3">
                            <h3 className="text-sm font-semibold text-gray-700 dark:text-gray-300">
                              画像生成プロンプト
                            </h3>
                            <button
                              onClick={() => copyToClipboard(analysisData.eyeCatchImage!.mainPrompt!, "main-prompt")}
                              className="px-3 py-1.5 text-xs font-medium text-blue-600 dark:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900/30 rounded-lg transition-colors flex items-center gap-1"
                            >
                              {copiedItem === "main-prompt" ? (
                                <>
                                  <svg className="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M5 13l4 4L19 7" />
                                  </svg>
                                  コピー済み
                                </>
                              ) : (
                                <>
                                  <svg className="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                                  </svg>
                                  コピー
                                </>
                              )}
                            </button>
                          </div>
                          <p className="text-gray-800 dark:text-gray-200 leading-relaxed font-mono text-sm bg-gray-50 dark:bg-gray-800 p-4 rounded-lg">
                            {analysisData.eyeCatchImage.mainPrompt}
                          </p>
                        </div>
                      )}

                      <div className="grid md:grid-cols-2 gap-6">
                        {/* Composition Ideas */}
                        {analysisData.eyeCatchImage.compositionIdeas && analysisData.eyeCatchImage.compositionIdeas.length > 0 && (
                          <div className="bg-white dark:bg-gray-700 rounded-xl p-6 border border-gray-200 dark:border-gray-600">
                            <h3 className="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-4 flex items-center gap-2">
                              <svg className="h-5 w-5 text-indigo-600 dark:text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4 5a1 1 0 011-1h4a1 1 0 011 1v7a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM14 5a1 1 0 011-1h4a1 1 0 011 1v7a1 1 0 01-1 1h-4a1 1 0 01-1-1V5zM4 16a1 1 0 011-1h4a1 1 0 011 1v3a1 1 0 01-1 1H5a1 1 0 01-1-1v-3zM14 16a1 1 0 011-1h4a1 1 0 011 1v3a1 1 0 01-1 1h-4a1 1 0 01-1-1v-3z" />
                              </svg>
                              構図のアイデア
                            </h3>
                            <div className="flex flex-wrap gap-2">
                              {analysisData.eyeCatchImage.compositionIdeas.map((idea, index) => (
                                <span
                                  key={index}
                                  className="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-medium bg-indigo-100 dark:bg-indigo-900/40 text-indigo-700 dark:text-indigo-300 border border-indigo-200 dark:border-indigo-800"
                                >
                                  {idea}
                                </span>
                              ))}
                            </div>
                          </div>
                        )}

                        {/* Color Palette */}
                        {analysisData.eyeCatchImage.colorPalette && analysisData.eyeCatchImage.colorPalette.length > 0 && (
                          <div className="bg-white dark:bg-gray-700 rounded-xl p-6 border border-gray-200 dark:border-gray-600">
                            <h3 className="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-4 flex items-center gap-2">
                              <svg className="h-5 w-5 text-pink-600 dark:text-pink-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                              </svg>
                              カラーパレット
                            </h3>
                            <div className="flex flex-wrap gap-2">
                              {analysisData.eyeCatchImage.colorPalette.map((color, index) => (
                                <span
                                  key={index}
                                  className="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-medium bg-pink-100 dark:bg-pink-900/40 text-pink-700 dark:text-pink-300 border border-pink-200 dark:border-pink-800"
                                >
                                  {color}
                                </span>
                              ))}
                            </div>
                          </div>
                        )}
                      </div>

                      <div className="grid md:grid-cols-2 gap-6">
                        {/* Mood */}
                        {analysisData.eyeCatchImage.mood && (
                          <div className="bg-gradient-to-br from-amber-50 to-yellow-50 dark:from-amber-900/20 dark:to-yellow-900/20 rounded-xl p-6 border border-amber-200 dark:border-amber-800">
                            <h3 className="text-sm font-semibold text-amber-700 dark:text-amber-300 mb-3 flex items-center gap-2">
                              <svg className="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                              </svg>
                              ムード・雰囲気
                            </h3>
                            <p className="text-gray-800 dark:text-gray-200 text-lg font-medium">
                              {analysisData.eyeCatchImage.mood}
                            </p>
                          </div>
                        )}

                        {/* Style */}
                        {analysisData.eyeCatchImage.style && (
                          <div className="bg-gradient-to-br from-teal-50 to-cyan-50 dark:from-teal-900/20 dark:to-cyan-900/20 rounded-xl p-6 border border-teal-200 dark:border-teal-800">
                            <h3 className="text-sm font-semibold text-teal-700 dark:text-teal-300 mb-3 flex items-center gap-2">
                              <svg className="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                              </svg>
                              スタイル
                            </h3>
                            <p className="text-gray-800 dark:text-gray-200 text-lg font-medium">
                              {analysisData.eyeCatchImage.style}
                            </p>
                          </div>
                        )}
                      </div>
                    </div>
                  ) : (
                    <div className="text-center py-12 text-gray-500 dark:text-gray-400">
                      <svg className="mx-auto h-12 w-12 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      <p>アイキャッチ画像のアイデアが生成されませんでした</p>
                    </div>
                  )}
                </div>
              )}

              {/* Hashtags Tab */}
              {activeTab === "hashtags" && (
                <div className="space-y-6 animate-fade-in">
                  <div className="flex items-center justify-between mb-6">
                    <h2 className="text-2xl font-bold text-gray-900 dark:text-white">
                      ハッシュタグ
                    </h2>
                    {analysisData.hashtags && analysisData.hashtags.length > 0 && (
                      <button
                        onClick={copyAllHashtags}
                        className="flex items-center gap-2 px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg transition-all text-sm font-medium shadow-md hover:shadow-lg"
                      >
                        {copiedItem === "all-hashtags" ? (
                          <>
                            <svg className="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M5 13l4 4L19 7" />
                            </svg>
                            コピー済み
                          </>
                        ) : (
                          <>
                            <svg className="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                            </svg>
                            すべてコピー
                          </>
                        )}
                      </button>
                    )}
                  </div>

                  {analysisData.hashtags && analysisData.hashtags.length > 0 ? (
                    <div className="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-3">
                      {analysisData.hashtags.map((hashtag, index) => (
                        <button
                          key={index}
                          onClick={() => copyToClipboard(hashtag, `hashtag-${index}`)}
                          className="group relative bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-gray-700 dark:to-indigo-900/30 rounded-lg p-4 border border-blue-100 dark:border-gray-600 hover:shadow-md transition-all text-left"
                        >
                          <div className="flex items-center justify-between">
                            <span className="text-blue-700 dark:text-blue-300 font-medium text-sm truncate flex-1">
                              {hashtag}
                            </span>
                            {copiedItem === `hashtag-${index}` ? (
                              <svg className="h-4 w-4 text-green-600 dark:text-green-400 flex-shrink-0 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M5 13l4 4L19 7" />
                              </svg>
                            ) : (
                              <svg className="h-4 w-4 text-gray-400 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors flex-shrink-0 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                              </svg>
                            )}
                          </div>
                        </button>
                      ))}
                    </div>
                  ) : (
                    <div className="text-center py-12 text-gray-500 dark:text-gray-400">
                      <svg className="mx-auto h-12 w-12 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14" />
                      </svg>
                      <p>ハッシュタグが生成されませんでした</p>
                    </div>
                  )}
                </div>
              )}
            </div>
          </div>
        )}

        {/* Footer */}
        <div className="mt-12 text-center">
          <p className="text-sm text-gray-600 dark:text-gray-400">
            Powered by Claude AI | Built with Next.js & Tailwind CSS
          </p>
          <p className="text-xs text-gray-500 dark:text-gray-500 mt-2">
            記事を総合的に分析し、タイトル、要約、画像アイデア、ハッシュタグを自動生成
          </p>
        </div>
      </div>
    </main>
  );
}
